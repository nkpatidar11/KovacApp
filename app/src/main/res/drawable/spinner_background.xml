<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item>
        <layer-list>
            <item>
                <shape>
                    <corners
                        android:radius="6dp"
                        />
                    <solid
                        android:color="#00FFFFFF"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"/>
                    <padding
                        android:left="10dp"
                        android:top="5dp"
                        android:right="10dp"
                        android:bottom="5dp" />
                    <stroke
                        android:width="1dip"
                        android:color="#DFDFDF" />
                </shape>
            </item>
            <item android:right="5dp">
                <bitmap android:gravity="center_vertical|right" android:src="@drawable/ic_arrow_drop_down_black_24dp" />
            </item>
         </layer-list>
    </item>
</selector>