    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/mainContainerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/headerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:text="@string/existing_client_online_registration"
                        android:textColor="@color/color_label"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/kovac_logo150" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewClientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/headerLayout"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="60dp"
                    android:text="Client Name"
                    android:textColor="@color/color_label"
                    android:textSize="@dimen/text_size_register" />

                <EditText
                    android:id="@+id/etClientName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height_size"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/headerLayout"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="52dp"
                    android:background="@drawable/border_with_corner"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textViewClientName"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16dp"
                    android:text="Email"
                    android:textColor="@color/color_label"
                    android:textSize="@dimen/text_size_register" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height_size"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textViewClientName"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_with_corner"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/textViewUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textViewEmail"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16dp"
                    android:text="Choose Username"
                    android:textColor="@color/color_label"
                    android:textSize="@dimen/text_size_register" />

                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height_size"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textViewEmail"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_with_corner"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/textViewPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textViewUserName"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16dp"
                    android:text="Choose Password"
                    android:textColor="@color/color_label"
                    android:textSize="@dimen/text_size_register" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/input_height_size"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textViewUserName"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_with_corner"
                    android:inputType="textPassword" />

            </RelativeLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/buttonLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/border_with_corner"
                android:text="Back"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size"
                android:textColor="@color/color_button_text" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/border_with_corner"
                android:text="Submit"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size"
                android:textColor="@color/color_button_text"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>


