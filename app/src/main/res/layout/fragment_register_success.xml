<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kovac.app.fragments.RegisterSuccessFragment">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/small3" />

    <TextView
        android:id="@+id/textViewSuccess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration_success_message"
        android:layout_marginTop="60dp"
        android:textSize="18sp"
        android:layout_below="@+id/logo_image"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/color_label"/>


    <TextView
        android:id="@+id/textViewDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textViewSuccess"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="24dp"
        android:text="@string/registration_success_discription"
        android:textAlignment="inherit"
        android:textColor="@color/color_label"
        android:textSize="@dimen/input_text_size" />


    <Button
        android:id="@+id/btnBackToHome"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border_with_corner"
        android:text="Back to Home"
        android:textAllCaps="false"
        android:textColor="@color/color_button_text"
        android:textSize="@dimen/button_text_size" />


</RelativeLayout>
